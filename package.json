{
  "name": "wishlist-app",
  "version": "0.1.0",
  "description": "Self-hosted wishlist application with slug-based sharing",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:css\"",
    "dev:server": "tsx watch src/server.ts",
    "dev:css": "tailwindcss -i src/styles/input.css -o src/public/css/output.css --watch",
    "build": "npm run build:css && tsc",
    "build:css": "tailwindcss -i src/styles/input.css -o src/public/css/output.css --minify",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "wishlist",
    "self-hosted",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@paralleldrive/cuid2": "^3.0.4",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.4.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.7",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.10",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
