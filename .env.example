# Server Configuration
PORT=3000
NODE_ENV=development

# Required - Admin Credentials
ORIGIN=http://localhost:3000
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Optional - Public Access Protection
# Set this to require a password for viewing public wishlists
ACCESS_PASSWORD=

# JWT Secrets (auto-generated and saved to data/secrets.json if not provided)
# Only set these manually for multi-instance deployments
SECRET=
REFRESH_SECRET=

# Optional - Token Expiration
TOKEN_EXPIRY_HOURS=72
REFRESH_TOKEN_EXPIRY_DAYS=30

# Optional - Basic Settings
TZ=America/New_York
DEFAULT_CURRENCY=USD
DEFAULT_LANGUAGE=en

# Optional - Advanced
LOG_LEVEL=info
