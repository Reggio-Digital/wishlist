# Server
PORT=3000
NODE_ENV=development

# Required
ORIGIN=http://localhost:3000
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Optional - Authentication
ACCESS_PASSWORD=

# JWT Secrets (auto-generated and saved to data/secrets.json if not provided)
# Only set these for multi-instance deployments or if you want manual control
SECRET=
REFRESH_SECRET=

TOKEN_EXPIRY_HOURS=72
REFRESH_TOKEN_EXPIRY_DAYS=30

# Optional - Localization
DEFAULT_LANGUAGE=en
TZ=America/New_York
DEFAULT_CURRENCY=USD
MAX_FILE_SIZE_MB=10

# Optional - Advanced
LOG_LEVEL=info
